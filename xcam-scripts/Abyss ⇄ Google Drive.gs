/**
 * Faz parse do nome do arquivo de v√≠deo para extrair username, data, hor√°rio e tempo.
 * Aceita username com underlines, inclusive terminando com "_".
 * Exemplo v√°lido: "Tio0Legal__06-06-2025_08-55_17m.mp4"
 */
function parseVideoName(filename) {
  const pattern = /^(.+)_((\d{2}-\d{2}-\d{4}))_(\d{2}-\d{2})_([0-9hm]+s?|[0-9hm]+)\.mp4$/i;
  const match = filename.match(pattern);
  if (!match) return null;
  return {
    username: match[1],
    data_str: match[2],
    horario_str: match[4],
    tempo_formatado: match[5]
  };
}

